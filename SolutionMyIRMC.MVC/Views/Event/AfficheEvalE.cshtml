@model IEnumerable<SolutionMyIRMC.Domain.EvaluationEvent>
@{
    ViewBag.Title = "AfficheEvalE";
}

<h2>Affichage de l'evaluation sur l'évenement</h2>

<p>
    @Html.ActionLink("Ajouter une nouvelle évaluation", "CreateEvalFormE")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("nom de l'évenement", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th>
            @Html.Label("nombre des participants", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th>
            @Html.Label("valeur globale", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th>
            @Html.Label("service globale", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th>
            @Html.Label("installation globale", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th>
            @Html.Label("nos recommandations", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th>
            @Html.Label("les actions", htmlAttributes: new { @class = "LabelCSSTop" })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nbPartcipant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valeurGlobale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceGlobal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.instalaltionGlobale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recommandation)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idEvalEvent }) |
                @Html.ActionLink("Details", "Details", new { id = item.idEvalEvent }) |
                <a href="/Event/DeleteEvalE?IdEvalEvent=@item.idEvalEvent">Supprimer</a>
            </td>
        </tr>
    }

</table>
