@model IEnumerable<SolutionMyIRMC.Domain.Event>

@{
    ViewBag.Title = "AfficheEvent";
    Layout = "~/Views/Shared/_usernavLayout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>




<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4>
                    Liste <strong> des événements</strong>
                </h4>
            </div>

            @foreach (var item in Model) { 
        <div class="col-lg-4">
            <div class="pricing-box-alt">

                <div class="pricing-heading">

                    <img src="@Html.DisplayFor(modelItem => item.image)" width="200px" height="200px" />

                </div>
                <div class="pricing-terms">
                    <h6> @Html.DisplayFor(modelItem => item.titreEvent) </h6>
                </div>
                <div class="pricing-content">
                    <ul>



                        <li><h6>Lieux</h6><i class="icon-ok">  @Html.DisplayFor(modelItem => item.lieuxEvent)</i></li>
                        <li><h6>Téléphone</h6><i class="icon-ok"> @Html.DisplayFor(modelItem => item.telEvent)</i></li>
                        <li><h6>description</h6><i class="icon-ok"> @Html.DisplayFor(modelItem => item.descriptionEvent)</i></li>


                    </ul>
                </div>
                <div class="pricing-action">
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
              
                    @Html.ActionLink("Delete", "Delete", new { id = item.idEvent }) |

                    @Html.ActionLink("Comment", "Comment", new { id = item.idEvent })

                </div>
            </div>
        </div>
            }

            <div style="width: 100%; color: black;" id="map"> </div>


        </div>
    </div>
</section>
			



