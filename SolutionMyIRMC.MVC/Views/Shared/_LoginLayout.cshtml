<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">

                <span class="login100-form-title p-b-32"> Account Login </span>
                <form id="login_form">
                    <span class="txt1 p-b-11"> Username </span>
                    <div class="wrap-input100 validate-input m-b-36"
                         data-validate="Username is required">
                        <input class="input100" value="#{userBean.user.email}" type="text"/>
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11"> Password </span>
                    <div class="wrap-input100 validate-input m-b-12"
                         data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        <inputSecret class="input100" type="password" name="pass"
                                       value="#{userBean.user.password}" />

                    </div>
                    <div>

                        <message class="alert alert-danger" for="login_submit"
                                   styleClass="error" />
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" id="login_submit"
                                         action="#{userBean.doLogin()}" value="Login" />
                    </div>

                    </form>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
